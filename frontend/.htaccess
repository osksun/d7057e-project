RewriteEngine On
RewriteRule ^$ /src/index/html/index.php [L]
RewriteRule ^courses/([^/]+)$ /src/index/html/index.php [L]
RewriteRule ^courses/([^/]+)/([^/]+)$ /src/index/html/index.php [L]
RewriteRule ^createcourse$ /src/course-editor/html/course-editor.php [L]
RewriteRule ^createmodule/([^/]+)$ /src/module-editor/html/module-editor.php [L]
RewriteRule ^login$ /src/register/html/login.php [L]
RewriteRule ^register$ /src/register/html/register.php [L]

ErrorDocument 403 /src/404/html/404.php
ErrorDocument 404 /src/404/html/404.php
